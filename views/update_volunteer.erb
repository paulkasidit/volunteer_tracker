<h3>Change Name: <%= @volunteer.name%></h3>

<form action="/project/<%= @project.id %>/volunteer/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="volunteer">Change Volunteer Name:</label>
  <input id="volunteer" name="volunteer" type="text" required>
  <button type="submit" class="btn btn-success">Change Name</button>
</form>

<form action="/project/<%= @project.id %>/volunteer/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Volunteer</button>
</form>
