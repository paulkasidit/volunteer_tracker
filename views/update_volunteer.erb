<h3>Change Name: <%= @volunteer.name%></h3>

<form action="/project/<%= @project.id %>/volunteer/<%= @volunteer.id %>" method="post">
  <input volunteer="_method" type="hidden" value="patch">

  <label for="volunteer">Change volunteer:</label>
  <input id="volunteer" volunteer="volunteer" type="text" required>

  <button type="submit" class="btn btn-success">Update</button>
</form>

<form action="/project/<%= @project.id %>/volunteer/<%= @volunteer.id %>" method="post">
  <input volunteer="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete volunteer</button>
</form>

<p><a href="/project/<%= @project.id %>">Return to your project</a></p>